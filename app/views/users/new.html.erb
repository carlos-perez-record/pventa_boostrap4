<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="page-header">
        <h1>Crear Cuenta</h1>
      </div>
      <!--Validaciones en la creacion de la cuenta -->
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control input-lg", placeholder: "ContraseÃ±a" %>
        </div>
        <div class="form-group">
          <%= f.text_field :nombre, class: "form-control input-lg", placeholder: "Nombre" %>
        </div>
        <div class="form-group">
          <%= f.text_field :cedula, class: "form-control input-lg", placeholder: "Cedula" %>
        </div>
        <div class="actions">
          <%= f.submit "Crear Usuario", class: "btn btn-danger btn-block btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
