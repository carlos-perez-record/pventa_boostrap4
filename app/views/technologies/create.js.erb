<% if @t.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody').append(' <%= j render "row", technology: @t %>');
  $('.alert-success').html("La tecnologia ha sido creada").show();
  $('#technology-modal').modal('hide');
<% else %>
  // show first error
  alert('ERROR: El campo no puede estar vacio');
<% end %>
