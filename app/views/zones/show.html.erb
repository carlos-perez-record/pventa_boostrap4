<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="page-header icons">
        <h1>Centros de Costos Zona: <%= @z %></h1>
        <%= link_to "<span class='glyphicon glyphicon-arrow-left' data-toggle='tooltip' title='ir a Zonas'></span>".html_safe, zones_path %>
        <%= link_to "<span class='glyphicon glyphicon-plus' data-toggle='tooltip' title='Registrar Nueva Zona'></span>".html_safe, new_zone_path, remote: true %>
        <%= link_to "<span class='glyphicon glyphicon-plus-sign' data-toggle='tooltip' title='Registrar Nuevo Centro de Costos para esta Zona'></span>".html_safe, new_center_path(:zone_id=>params[:id], :visible => true ), remote: true %>
        </div>
        <% if @z.centers.any? %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>NOMBRE</th>
                <th>ZONA</th>
                <th>ACCION</th>
              </tr>
            </thead>
            <tr>
              <% @z.centers.each do |center| %>
                <td><%= center.nombre %></td>
                <td><%=@z.nombre %></td>
                <td>
                  <div class="icons"><%= link_to "<span class='glyphicon glyphicon-pencil' data-toggle='tooltip' title='Modificar Centro Costo'></span>".html_safe, edit_center_path(center), remote: true %>
                    <%= link_to "<span class='glyphicon glyphicon-trash' data-toggle='tooltip' title='Elimina el Centro de Costo y los puntos de venta que lo contienen'></span>".html_safe, center, method: :delete, data: { confirm: "¿Estás seguro de eliminar este centro de costos, y por consiguiente todos los puntos de venta que lo contienen?, de no ser asi cambie primero el centro de costos de los puntos de venta que la contienen y luego regrese a borrarlo" } %>
                  </div>
                </td>
            </tr>
            <% end %>
        <% else %>
          <div class="alert alert-info">
            <strong>Info!: </strong> Esta Zona aun no tiene Centros de Costos Registrados!
          </div>
        </table><% end %>
    </div>
  </div>
</div>
