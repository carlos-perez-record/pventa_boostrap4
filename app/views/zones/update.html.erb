
<% if @z.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody tr#<%= @z.id %>').replaceWith(' <%= j render "row", zone: @z %>');
  $('.alert-success').html("La Zona ha sido modificada").show();
  $('#center-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @z.errors.full_messages[0] %>');
<% end %>
